<view class="container">
<!-- 主要 -->
  <view class="wrapper">
    <!-- 背景文字 -->
    <view class="left-top-sign">LOGIN</view>
    <view class="welcome">
      欢迎回来！
    </view>
    <!-- 表单 -->
    <view class="input-content">
      <!-- 手机号 -->
      <view class="input-item">
        <text class="tit">手机号码</text>
        <input  type="text" placeholder="请输入手机号码" bindinput="handleInp" data-type="phone"/>
      </view>
      <!-- 密码 -->
      <view class="input-item">
        <text class="tit">密码</text>
        <input type="password"  placeholder="请输入密码" bindinput="handleInp" data-type="password"/>
      </view>
    </view>
    <button class="confirm-btn" bindtap="login">登录</button>
    <!-- 忘记密码 -->
    <view class="forget-section">
      忘记密码?
    </view>
  </view>
  <!-- 底部 -->
  <view class="register-section">
    还没有账号?
    <text >马上注册</text>
  </view>
</view>
