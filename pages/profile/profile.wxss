.profile {
  width:100%;
  height: 100%;
  background-color: #f5f5f5;
}
/* 用户 */
.user {
  position: relative;
  height:520rpx;
  padding: 100rpx 30rpx 0;
}
.user .bgImg {
  position: absolute;
  top:0;
  left:0;
  width:100%;
  height:100%;
  opacity:.8;
}
/* 用户信息 */
.user-info {
  position: absolute;
  top: 92rpx;
  left: 24rpx;
  width:100%;
}
.user-info image {
  width:120rpx;
  height:120rpx;
  vertical-align: middle;
  border:4rpx solid #fff;
  border-radius:50%;
}
.user-info text {
  margin-left:20rpx;
}
/* 会员卡片 */
.card {
  width:88%;
  height:240rpx;
  padding:20rpx;
  margin-top:20rpx;
  border-radius:8rpx;
  background-color: rgba(0,0,0,.70);
  color:#f7d680;
}
.card .title {
  height:80rpx;
  font-size:22rpx;
}
.title .left {
  float:left;
}

.title  .btn {
  float: right;
  width:130rpx;
  height:40rpx;
  line-height:40rpx;
  text-align:center;
  background-color: #f9e6af;
  border-radius:30rpx;
  color:#333
} 
.hint {
  margin:20rpx;
  font-size:20rpx;
}
/* 覆盖 */
.cover {
  margin-top:-164rpx;
  padding: 0 30rpx;
  position:relative;
  background: #f5f5f5;
  padding-bottom: 20rpx;
}
.cover .arc{
  position:absolute;
  left: 0;
  top: -34rpx;
  width: 100%;
  height: 36rpx;
}
/* 导航部分 */
.cover .nav-section {
  display: flex;
  background: #fff;
  padding: 20rpx 0;
  border-radius: 15rpx;
}

.nav-section .nav-item {
  width: 25%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nav-section .nav-item .iconfont {
  font-size: 50rpx;
  color: #d43c33;
  line-height: 70rpx;
}

.nav-section .nav-item text:last-child {
  font-size: 22rpx;

}


/* 个人中心列表 */
.personalContent {
  background: #fff;
  margin-top: 20rpx;
}

/* 最近播放记录 */
.recentScroll {
  display: flex;
  height: 200rpx;
}
.recentItem {
  margin-right: 20rpx;
}
.recentItem image {
  margin-top:10rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

/* 个人列表 */
.cardList {
  margin-top: 20rpx;

}
.cardList .card-item{
  border-top: 1rpx solid #eee;
  height: 80rpx;
  line-height: 80rpx;
  padding: 10rpx;
  font-size: 26rpx;
  color: #333;
}
.cardList .card-item .iconfont {
  float: right;
}

