/* 轮播图 */
.swiper {
  width:100%;
  height:256rpx;
}
.swiper-item image{
  width:100%;
  height:100%;
}
/* 导航 */
.nav {
  display: flex;
  padding:20rpx 0;
  border-bottom:2rpx solid #eee;
}
.nav-item {
  display: flex;
  flex-direction: column;
  /* 在侧轴居中 */
  align-items: center;
  width:20%;
}
.nav text.iconfont {
  width:84rpx;
  height:84rpx;
  margin-bottom:16rpx;
  background-color: #f01313;
  color:#fff;
  border-radius:50%;
  text-align: center;
  line-height:84rpx;
  font-size:50rpx;
}
.nav text {
  font-size:26rpx;
}
/* 推荐 */
.recommend {
  height:360rpx;
  margin:30rpx;
}

/* 推荐 */
.recommend-scroll {
  display:flex;
  height:300rpx;
}
.scroll-item {
  display: flex;
  flex-direction: column;
  width:200rpx;
  margin:20rpx 0;
  margin-right:20rpx;
}
.scroll-item image {
  width:200rpx;
  height:200rpx;
  border-radius:8rpx;
}
.scroll-item text {
  margin-top:8rpx;
  font-size:26rpx;
  /* 多行文本溢出省略号 */
  /* 块级元素使用 */
  overflow:hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-box-orient: vertical; /*设置对齐模式*/
  -webkit-line-clamp: 2; /*设置多行的行数*/
}
/* 热歌 */
.top-list {
  padding:0 30rpx 30rpx;
}
.music-swiper {
  height:500rpx;
}
.music-swiper-item {
  width:96%;
  padding-left:20rpx;
  background-color: #fbfbfb;
}
.music-swiper .title {
  padding:30rpx 0;
}
/* 音乐列表 */
.music-list {
  height:100rpx;
  line-height:100rpx;
  margin:20rpx 0;
}
.music-list .music-item {
  display: flex;
  margin-bottom:20rpx;
}
.music-item  image {
  width:100rpx;
  height:100rpx;
  border-radius:10rpx;
}
.music-item .order {
  margin:0 30rpx;
}