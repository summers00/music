.video {
  height:100%;
}
/* 头部 */
.video .header {
  display: flex;
  padding:10rpx;
}
.video .header image {
  width:60rpx;
  height:60rpx;
}
.video .header .search {
  flex:1;
  text-align:center;
  height:60rpx;
  line-height:60rpx;
  margin: 0 10rpx;
  border:1px solid #eee;
  color:#d43c33;
  border-radius:5rpx;
}
/* 导航 */
.nav {
  display: flex;
  white-space: nowrap;
  height:50rpx;
}
.nav-item {
  padding:0 30rpx;
  height:50rpx;
  line-height:50rpx;
  font-size: 28rpx;
}
.nav-item .title {
  height:50rpx;
  box-sizing: border-box;
}
.nav-item .active {
  border-bottom:1px solid #d43c33;
}
/* 视频 */
.video-scroll {
  margin:20rpx 0;
}
.video-item {
  padding:0 3%;
}
.video-item .video{
  width:100%;
  height:360rpx;
  border-radius: 10rpx;
}
/* 视频内容区域 */
.video-item .content {
  font-size: 30rpx;
  height:60rpx;
  line-height: 60rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 底部 */
.footer {
  border-top: 1rpx solid #eee;
  padding: 10rpx 0;
}
/* 头像 */
.footer .avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.footer  .nickName {
  font-size: 24rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}
/* 评论 */
.footer .comments_praised {
  float: right;
}
/* 分享 */
.comments_praised .btn {
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
}

.comments_praised .btn:after {
  border: none;
}
/* 图标项 */
.comments_praised .item {
  margin-left: 50rpx;
  position: relative;
}
/* 计数 */
.comments_praised .item .count {
  position: absolute;
  top: -20rpx;
  font-size: 20rpx;
}

