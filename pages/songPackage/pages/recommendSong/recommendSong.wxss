page {
  height:100%;
}
/* 头部 */
.header {
  position: relative;
  width:100%;
  height:300rpx;
}
.header image {
  width:100%;
  height:100%;
}
/* 日期 */
.date {
  position: absolute;
  width:290rpx;
  height:100rpx;
  top:0;
  left:0;
  right:0;
  bottom:0;
  margin:auto;
  font-size:32rpx;
  color:#fff;
  text-align:center;
  line-height:100rpx;
}
.date .day {
  font-size:36rpx;
}
/* 播放列表 */
.content {
  position: relative;
  top:-20rpx;
  background-color: #fff;
  border-radius:36rpx;
  padding:20rpx;
}
.content .more {
  float:right;
}
.song-list{
  height:calc(100vh - 380rpx);
  margin:20rpx 0;
}
.song-item {
  margin-bottom: 30rpx;
}
.song-item .left {
  display: flex;
  align-items:center;
}
.song-list image {
  width:80rpx;
  height:80rpx;
  border-radius:8rpx;
  margin-right:15rpx;
}
.song-info .singer-name {
  font-size:24rpx;
  color:#717171;
}
/* 更多 */
.icon-gengduo {
  position: absolute;
  width:80rpx;
  height:80rpx;
  line-height:80rpx;
  right: 0;
  text-align: right;
  color:#717171;
}
